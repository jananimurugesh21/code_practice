class Solution {
    static int reverse(int n) {
        int rev = 0;
        while (n > 0) {
            rev = rev * 10 + n % 10;
            n /= 10;
        }
        return rev;
    }

    static int isSumPalindrome(int n) {
        if(n==reverse(n)) return n;
        for (int i = 0; i < 5; i++) { // repeat few times to find palindrome
            int rev = reverse(n);
            int sum = n + rev;
            if (sum == reverse(sum))
                return sum;
            n = sum; // update n for next iteration
        }
        return -1; // if not palindrome found
    }
}
